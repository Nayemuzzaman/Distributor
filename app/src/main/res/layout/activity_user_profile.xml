<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_seles_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent">





    <!--<include
        layout="@layout/sales_offer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="9"
        android:layout_height="0dp">
        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/header_cover_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/nav_menu_header_bg"
                app:srcCompat="@drawable/nav_menu_header_bg" />

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/profile"
                android:layout_width="120dp"
                android:layout_height="120dp"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"
                android:clickable="true"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/man"
                app:civ_border_color="#FFFFFFFF"
                app:civ_border_width="3dp" />


            <LinearLayout
                android:id="@+id/just_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_cover_image"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtNameTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:text="@string/name" />

                        <TextView
                            android:id="@+id/txtName"
                            android:layout_width="0dp"
                            android:paddingLeft="20dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtAddressTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:text="@string/address" />

                        <TextView
                            android:id="@+id/txtAddressName"
                            android:layout_width="0dp"
                            android:paddingLeft="20dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtcontactCodeTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:text="@string/contact" />

                        <TextView
                            android:id="@+id/txtcontact"
                            android:layout_width="0dp"
                            android:paddingLeft="20dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6" />

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
